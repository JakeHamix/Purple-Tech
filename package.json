{
  "private": true,
  "version": "0.0.0",
  "name": "purple-hire-o-mat",
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "start": "concurrently --kill-others \"npm run server:run\" \"serve ./web/build\"",
    "server:run": "nodemon",
    "server:build": "tsc -p ./server",
    "server:apidoc": "apidoc --input server/routes/ --output server/docs/ --file-filters .*\\.ts",
    "test": "jest",
    "init": "npm i && docker compose up --wait && (sleep 3 || timeout /t 3)  && prisma migrate deploy && npm run-script -w web build"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "serve": "^14.2.0"
  }
}
